<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Custom Picklist Datatable</masterLabel>
    <description>A datatable that supports custom picklist types and dynamic columns for Compensation Review.</description>
    
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__AppPage, lightning__RecordPage, lightning__HomePage">
            <property name="userDept" type="String" label="Department Name" 
                      description="Enter the department (e.g., Sales, Engineering) to load columns." />
            
            </targetConfig>
    </targetConfigs>
</LightningComponentBundle>